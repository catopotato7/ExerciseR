<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="catoc17.exercisr.MainMenu"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:text="Log Time"
        android:layout_width="200dp"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="100dp"
        android:id="@+id/Log"
        android:layout_height="wrap_content"
        android:onClick="buttonOnClick"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main_menu"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toTopOf="@+id/activity_main_menu"
        android:layout_marginTop="100dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/activity_main_menu"
        tools:layout_constraintRight_creator="0" />

    <Button
        android:text="Settings"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="188dp"
        android:id="@+id/Settings"
        app:layout_constraintLeft_toLeftOf="@+id/Log"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/Log"
        android:layout_marginTop="40dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/Log"
        tools:layout_constraintRight_creator="0"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:text="About"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="276dp"
        android:id="@+id/About"
        app:layout_constraintLeft_toLeftOf="@+id/Settings"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/Settings"
        android:layout_marginTop="40dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/Settings"
        tools:layout_constraintRight_creator="0" />

</android.support.constraint.ConstraintLayout>
